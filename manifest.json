{
  "manifest_version": 3,
  "name": "GibKey",
  "version": "1.0",
  "description": "Encrypts messages and decrypts ENCRYPTED[...] text with key exchange.",
  "permissions": [
    "scripting",
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "storage",
    "commands"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "GibKey",
    "default_icon": "GibKeyIcon.png"
  },
  "commands": {
    "insert_encrypted": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Encrypt and copy typed text"
    }
  },
  "host_permissions": ["<all_urls>"],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
